<h1 class="titulo">Vista de productos</h1>

{{#if vacio}}
  <h2 class="subTitulo">No se encontraron productos</h2>
  {{else}}
          
          <div class="tablaProductos">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
              </tr>
            </thead>
            <tbody>
              {{#each productos}}
                <tr>
                  <td>{{this.title}}</td>
                  <td>{{this.price}}</td>
                  <td><img alt="Foto" class="imgProducto" src={{this.thumbnail}}></td>
                </tr>
                {{/each}}
            </tbody>


          </table>
          </div>
      {{/if}}